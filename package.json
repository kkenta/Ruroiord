{
  "name": "ruroiord",
  "version": "1.0.0",
  "description": "Discordライクなデスクトップアプリケーション",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "set NODE_ENV=development && tsc -p electron/tsconfig.json && set NODE_ENV=development && electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p electron/tsconfig.json",
    "start": "electron .",
    "package": "electron-builder",
    "server": "ts-node -P server/tsconfig.json server/index.ts",
    "server:dev": "nodemon -P server/tsconfig.json server/index.ts"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "chat",
    "discord"
  ],
  "author": "Ruroiord Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/sqlite3": "^3.1.0",
    "@types/webrtc": "^0.0.46",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.8.1",
    "sqlite3": "^5.1.0"
  },
  "build": {
    "appId": "com.ruroiord.app",
    "productName": "Ruroiord",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "icon": "icononly-removebg.png"
    },
    "win": {
      "target": "nsis",
      "icon": "icononly-removebg.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icononly-removebg.png"
    }
  }
}
